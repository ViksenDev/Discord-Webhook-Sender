from tkinter import *
from tkinter import ttk
import requests
from discord import SyncWebhook # Import SyncWebhook
 
def show_message():
   u = url.get()
   m = message.get()
   webhook = SyncWebhook.from_url(u) # Initializing webhook
   webhook.send(content=m) # Executing webhook.
   message_label["text"] = "Выполнено"

 
root = Tk()
root.title("Discord Webhook Sender")
root.geometry("350x300") 
root['background']='#ADD8E6'



label = ttk.Label(text="Введите URL вашего вебхука:")
label.pack(anchor=NW, padx=6, pady=6)

url = ttk.Entry(width=60, font=('helvetica  16'))
url.pack(anchor=NW, padx=6, pady=6,)
url.focus()

label2 = ttk.Label(text="Введите ваше сообщение:")
label2.pack(anchor=NW, padx=6, pady=6)

message = ttk.Entry(width=60, font=('helvetica  16'))
message.pack(anchor=NW, padx=6, pady=6)
  
btn = ttk.Button(text="Отправить", command=show_message)
btn.pack(anchor=NW, padx=6, pady=6)

# Button for closing
exit_button = ttk.Button(text="Выход", command=root.destroy)
exit_button.pack(anchor=NW, padx=6, pady=6)
 
ttk.Style().configure(".",  font="helvetica  16", weight="bold", foreground="#000000", padding=8, background="#ADD8E6") 



message_label = ttk.Label(foreground="green")
message_label.pack(anchor=NW, padx=6, pady=6)



  
root.mainloop()
